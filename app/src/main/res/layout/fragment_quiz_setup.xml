<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              tools:context="co.wordywordy.wordywordy.QuizSetupFragment">


    <RadioGroup
        android:id="@+id/area_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/es_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="ES"/>

        <RadioButton
            android:id="@+id/ms_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MS"/>

        <RadioButton
            android:id="@+id/hs_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HS"/>

        <RadioButton
            android:id="@+id/sat_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAT"/>

        <RadioButton
            android:id="@+id/all_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALL"/>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/level_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/two_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="2"/>

        <RadioButton
            android:id="@+id/four_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"/>

        <RadioButton
            android:id="@+id/six_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"/>

        <RadioButton
            android:id="@+id/eight_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"/>

        <RadioButton
            android:id="@+id/ten_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"/>

    </RadioGroup>




    <Button
        android:id="@+id/take_quiz_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/take_quiz"
        android:textAppearance="?android:textAppearanceLarge"
        />


</LinearLayout>
