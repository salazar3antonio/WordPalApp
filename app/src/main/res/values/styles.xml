<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>

    </style>

    <style name="ElementaryTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/mat_red_500</item>
        <item name="colorPrimaryDark">@color/mat_red_700</item>
    </style>

    <style name="MiddleSchoolTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/mat_purple_500</item>
        <item name="colorPrimaryDark">@color/mat_purple_700</item>
    </style>

    <style name="HighSchoolTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/mat_teal_500</item>
        <item name="colorPrimaryDark">@color/mat_teal_700</item>
    </style>

    <style name="SatTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/mat_pink_500</item>
        <item name="colorPrimaryDark">@color/mat_pink_700</item>
    </style>

    <style name="GmatTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/mat_orange_500</item>
        <item name="colorPrimaryDark">@color/mat_orange_700</item>
    </style>

    <style name="OverallTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/mat_indigo_500</item>
        <item name="colorPrimaryDark">@color/mat_indigo_700</item>
    </style>

    <style name="QuizReportTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="strokeWidth">1dp</item>
        <item name="radius">6dp</item>
        <item name="android:padding">4dp</item>
        <item name="centered">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.BrandedLaunch" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen_layer</item>
    </style>

</resources>
